<Page x:Class="PDS_Manager.Pages.Pridaj_Rezervaciu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDS_Manager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pridaj_Rezervaciu">

    <StackPanel Margin="25">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Rodné číslo" HorizontalAlignment="Center" Margin="5"/>
            <TextBox Width="150" Margin="5" x:Name="ROD_CISLO"/>
            <TextBlock Text="SPŽ" HorizontalAlignment="Center" Margin="5"/>
            <TextBox Width="150" Margin="5" x:Name="SPZ"/>
            <TextBlock Text="Dátum od" HorizontalAlignment="Center" Margin="5"/>
            <DatePicker x:Name="Od"/>
            <TextBlock Text="Dátum do" HorizontalAlignment="Center" Margin="5"/>
            <DatePicker x:Name="do"/>
        </StackPanel>

        <Button Content="Pridaj rezerváciu" Margin="15" Width="150" Click="PridajRezeravciuClick"/>
    </StackPanel>
</Page>
